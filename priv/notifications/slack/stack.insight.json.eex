{
	"text": "✨ *New insights generated for your stack <%= @stack.name %>",
	"blocks": [
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "✨ *New insights generated for your stack <%= @stack.name %>:*"
            }
        },
        {
			"type": "section",
			"text": {
                "type": "plain_text",
                "text": "Here's a brief summary of what we've found:\n"
            }
		},
		{
			"type": "section",
			"text": {
                "type": "plain_text",
                "text": <%= Jason.encode!(Console.truncate(@text, 2800)) %>
            }
		},
        {
			"type": "actions",
			"elements": [
				{
					"type": "button",
					"text": {
						"type": "plain_text",
						"text": "View the full insight in Plural",
						"emoji": true
					},
					"url": "<%= Console.url("/stacks/#{@stack.id}") %>"
				}
			]
		}
	]
}
