{
	"text": "✨ *New insights generated for your service <%= @service.name %>",
	"blocks": [
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "✨ *New insights generated for your service <%= @service.name %>:*"
            }
        },
		{
			"type": "section",
			"text": {
                "type": "plain_text",
                "text": "Here's a brief summary of what we've found:\n"
            }
		},
		{
			"type": "section",
			"text": {
                "type": "plain_text",
                "text": <%= Jason.encode!(Console.truncate(@text, 2800)) %>
            }
		},
        {
			"type": "actions",
			"elements": [
				{
					"type": "button",
					"text": {
						"type": "plain_text",
						"text": "View The Full Insight Here",
						"emoji": true
					},
					"url": "<%= Console.url("/cd/clusters/#{@service.cluster_id}/services/#{@service.id}/components") %>"
				}
			]
		}
	]
}
