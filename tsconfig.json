{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "ES2021", "DOM"],
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
