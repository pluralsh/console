{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "eslint.run": "onSave",
  "eslint.validate": ["javascript", "typescript"],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ]
}
