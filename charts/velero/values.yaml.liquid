velero:
  configuration:
    backupStorageLocation:
      - name: default
        provider: aws
        bucket: {{ configuration.bucket }}
        config:
          region: minio
          s3ForcePathStyle: "true"
          s3Url: "http://minio.velero.svc:9000"
  credentials:
    secretContents:
      cloud: |
        [default]
        aws_access_key_id={{ configuration.rootUser }}
        aws_secret_access_key={{ configuration.rootPassword }}

minio:
  rootUser: {{ configuration.rootUser }}
  rootPassword: {{ configuration.rootPassword }}
