{
  "extends": "../tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "dist",

    // TODO: get rid of all these once errors are fixed
    "strict": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "noImplicitAny": true
  },
  "include": ["src/**/*"]
}
